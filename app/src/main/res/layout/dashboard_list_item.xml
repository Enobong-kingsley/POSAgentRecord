<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

       <TextView
           android:id="@+id/transaction_date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="December 22, 2019"
           android:layout_marginTop="20dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginLeft="24dp"
           />

       <View
           android:id="@+id/box"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:background="@color/Orange"
           android:layout_marginTop="20dp"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintTop_toBottomOf="@id/transaction_date"
           android:layout_marginLeft="24dp"
           />
       <TextView
           android:id="@+id/transaction_type_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Withdrawal"
           android:layout_marginTop="20dp"
           app:layout_constraintLeft_toRightOf="@id/box"
           android:textColor="@color/Orange"
           app:layout_constraintTop_toBottomOf="@id/transaction_date"
           android:layout_marginLeft="24dp"
           />

       <TextView
           android:id="@+id/charge_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Pos Charges"
           android:layout_marginTop="20dp"
           app:layout_constraintLeft_toRightOf="@id/box"
           app:layout_constraintTop_toBottomOf="@id/transaction_type_tv"
           android:layout_marginLeft="24dp"
           />

       <TextView
           android:id="@+id/amount_charged"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="150"
           android:layout_marginRight="24dp"
           android:layout_marginTop="20dp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/transaction_type_tv"
           />

       <TextView
           android:id="@+id/transaction"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Transaction fee"
           android:layout_marginTop="20dp"
           app:layout_constraintLeft_toRightOf="@id/box"
           app:layout_constraintTop_toBottomOf="@id/charge_type"
           android:layout_marginLeft="24dp"
           />

       <TextView
           android:id="@+id/transaction_fee"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="150"
           android:layout_marginRight="24dp"
           android:layout_marginTop="20dp"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toBottomOf="@id/charge_type"
           />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorGrey"
        app:layout_constraintTop_toBottomOf="@id/transaction_fee"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

