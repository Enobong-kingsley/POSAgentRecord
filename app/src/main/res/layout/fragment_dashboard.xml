<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                app:title="@string/Dashboard"
                app:titleTextColor="@color/background"
                android:layout_width="match_parent"
                android:background="@color/Orange"
                android:layout_height="?attr/actionBarSize"/>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/Orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbarLayout">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@id/company_name"
                android:text="@string/Welcome_text"/>

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginRight="36dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/company_name_text"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/welcome"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toRightOf="@id/company_name"
                android:text="Total Charges"/>

            <TextView
                android:id="@+id/total_charges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/welcome"
                android:layout_marginTop="24dp"
                android:layout_marginRight="48dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_constraintRight_toRightOf="parent"
                android:text="30,00000"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/total_charges">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/opening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toLeftOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/opening_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Opening Bal"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/opening_bal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100,000"
                                android:textStyle="bold"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/opening_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/closing_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toRightOf="@id/opening">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/closing_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Closing Bal"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/closing_bal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200,000"
                                android:textStyle="bold"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/closing_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fee_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toRightOf="@id/closing_card">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/transaction_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transaction Fee"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/transaction_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200,000"
                                android:textStyle="bold"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/transaction_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/transfer_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintLeft_toRightOf="@id/fee_card">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/transfer_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transfer"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/transfer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200,000"
                                android:textStyle="bold"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/transfer_tv"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top">

            <TextView
                android:id="@+id/transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transactions"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/Orange"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/calendar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                app:srcCompat="@drawable/ic_calendar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/csv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                app:srcCompat="@drawable/ic_library"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/empty_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty"
                android:layout_marginTop="60dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/csv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transaction_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/dashboard_list_item"
                    app:layout_constraintTop_toBottomOf="@id/transactions"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


