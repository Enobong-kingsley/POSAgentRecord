<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appbarLayout"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/company_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="50dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toTopOf="parent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CompanyName_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/company_name_text"
                    app:layout_constraintLeft_toLeftOf="@id/CompanyName_tivi"
                    app:layout_constraintRight_toRightOf="@id/CompanyName_tivi"
                    app:layout_constraintTop_toBottomOf="@id/CompanyName_tivi" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/company_layout"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email_txt"
                    android:autofillHints="Enter your Password here" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwd_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_margin="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:layout_constraintLeft_toLeftOf="@id/email_layout"
                app:layout_constraintTop_toBottomOf="@id/email_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/pwd_layout"
                app:layout_constraintRight_toRightOf="@id/pwd_layout"
                app:layout_constraintTop_toBottomOf="@id/pwd_layout"
                android:background="@drawable/curve_button"
                android:text="Signup"
                android:textAllCaps="false"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:id="@+id/google_Iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_googlelogo"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toLeftOf="@id/guidelines"
                app:layout_constraintTop_toBottomOf="@id/signup_btn"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintTop_toBottomOf="@id/signup_btn"/>

            <ImageView
                android:id="@+id/facebook_Iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_facebook"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@id/signup_btn"
                app:layout_constraintLeft_toRightOf="@id/guidelines"
                />

            <TextView
                android:id="@+id/Question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginLeft="24dp"
                android:text="Dont have an Account?"
                app:layout_constraintTop_toBottomOf="@+id/google_Iv"
                app:layout_constraintLeft_toLeftOf="@id/signup_btn"/>

            <TextView
                android:id="@+id/Sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/Orange"
                android:textSize="20sp"
                android:text="Login"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/google_Iv"
                app:layout_constraintLeft_toRightOf="@id/Question_tv"/>

            <ImageView
                android:id="@+id/login_pg_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Question_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@drawable/ic_signupscreen"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>